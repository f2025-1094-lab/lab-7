#include <iostream>
using namespace std;
bool checkEvenOdd(int n) {
    if (n % 2 == 0)
        return true;
    else
        return false; 
}
int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;
    bool isEven = checkEvenOdd(num);
    if (isEven)
        cout << num << " is Even" << endl;
    else
        cout << num << " is Odd" << endl;
    return 0;
}
